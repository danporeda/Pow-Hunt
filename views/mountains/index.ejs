<% layout('layouts/boilerplate') %>
<div id="cluster-map" style="width: 100%; height: 500px;"></div>
<h1>All Mountains</h1>
<ul>
  <% for (let m of mountains) { %>
    <div class="card">
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= (m.images.length && m.images[0].url) %>" alt="woah">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= m.name %></h5>
            <p class="card-text"><%= m.location %></p>
            <p>
              <small class="text-body-secondary"><%= m.pass.map((p => " " + p)) %></small>
            </p>
            <a class="btn btn-primary" href="/mountains/<%= m._id %>">View</a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</ul>

<script>
  const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
  const mountains = { features: <%- JSON.stringify(mountains) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>

